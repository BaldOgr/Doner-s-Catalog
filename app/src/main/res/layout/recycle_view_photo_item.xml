<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/recycle_view_item_card_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/recycle_view_item_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="imageOnClick"
                android:src="@mipmap/ic_add_photo" />

            <ImageView
                android:id="@+id/recycle_view_delete_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_delete_photo"
                app:layout_constraintEnd_toEndOf="@+id/recycle_view_item_image_view"
                app:layout_constraintTop_toTopOf="@+id/recycle_view_item_image_view" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>